<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        tools:layout_editor_absoluteX="67dp"
        tools:layout_editor_absoluteY="67dp">


        <Button
            android:id="@+id/takeButton"
            android:layout_width="148dp"
            android:layout_height="48dp"
            android:layout_marginStart="129dp"
            android:layout_marginTop="24dp"
            android:onClick="takeMoney"
            android:text="take money"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fillButton" />

        <TextView
            android:id="@+id/waterText2"
            android:layout_width="154dp"
            android:layout_height="38dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="34dp"
            android:text="How many disposable cups you want to add"
            android:textAlignment="viewStart"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/coffeeBeansText" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/cupsInput"
            android:layout_width="158dp"
            android:layout_height="48dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="20dp"
            android:hint="0"
            android:inputType="number"
            android:text="0"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/coffeeBeansInput" />

        <TextView
            android:id="@+id/coffeeBeansText"
            android:layout_width="148dp"
            android:layout_height="38dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="34dp"
            android:text="How many coffe beans you want to add"
            android:textAlignment="viewStart"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/milkText" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/coffeeBeansInput"
            android:layout_width="158dp"
            android:layout_height="48dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="20dp"
            android:hint="0"
            android:inputType="number"
            android:text="0"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/milkInput" />

        <TextView
            android:id="@+id/milkText"
            android:layout_width="128dp"
            android:layout_height="38dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="34dp"
            android:text="How many water you milk to add"
            android:textAlignment="viewStart"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/waterText" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/milkInput"
            android:layout_width="158dp"
            android:layout_height="48dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="20dp"
            android:hint="0"
            android:inputType="number"
            android:text="0"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/waterInput" />

        <TextView
            android:id="@+id/message"
            android:layout_width="347dp"
            android:layout_height="36dp"
            android:layout_marginTop="34dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/latteButton"
            android:layout_width="82dp"
            android:layout_height="48dp"
            android:layout_marginTop="34dp"
            android:layout_marginEnd="10dp"
            android:onClick="buyLatte"
            android:text="latte"
            app:layout_constraintEnd_toStartOf="@+id/cappuccinoButton"
            app:layout_constraintTop_toBottomOf="@+id/Resources" />

        <Button
            android:id="@+id/espressoButton"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="34dp"
            android:layout_marginEnd="10dp"
            android:onClick="buyEspresso"
            android:text="espresso"
            app:layout_constraintEnd_toStartOf="@+id/latteButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Resources" />

        <Button
            android:id="@+id/cappuccinoButton"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginTop="34dp"
            android:layout_marginEnd="20dp"
            android:onClick="buyCappuccino"
            android:text="cappuccino"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Resources" />

        <TextView
            android:id="@+id/Resources"
            android:layout_width="238dp"
            android:layout_height="90dp"
            android:layout_marginTop="34dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/message" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/waterInput"
            android:layout_width="158dp"
            android:layout_height="48dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="20dp"
            android:hint="0"
            android:inputType="number"
            android:text="0"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/latteButton" />

        <TextView
            android:id="@+id/waterText"
            android:layout_width="128dp"
            android:layout_height="38dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="28dp"
            android:text="How many water you want to add"
            android:textAlignment="viewStart"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/espressoButton" />

        <Button
            android:id="@+id/fillButton"
            android:layout_width="148dp"
            android:layout_height="48dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="132dp"
            android:onClick="fillMachine"
            android:text="fill"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cupsInput" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>